{
  "name": "hoopadmin",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev:api": "pnpm --filter @hoop/api dev",
    "dev:web": "pnpm --filter @hoop/web dev",
    "dev": "pnpm run \"/^dev:/\"",
    "build": "pnpm --filter @hoop/shared build && pnpm run --parallel build:api build:web",
    "build:api": "pnpm --filter @hoop/api build",
    "build:web": "pnpm --filter @hoop/web build",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "test": "pnpm -r test",
    "db:dev": "docker compose -f docker-compose.dev.yml up -d",
    "db:stop": "docker compose -f docker-compose.dev.yml down",
    "db:migrate": "pnpm --filter @hoop/api prisma:migrate",
    "db:seed": "pnpm --filter @hoop/api prisma:seed"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "bcrypt",
      "esbuild",
      "prisma"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.32.1"
  }
}
